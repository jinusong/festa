<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="200dp"
        android:layout_height="230dp" android:id="@+id/cardView2">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_margin="10dp"
                app:layout_constraintBottom_toTopOf="@id/item_event_tickets_price"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="14dp"
                android:maxLines="1"
                android:id="@+id/item_event_tickets_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_margin="10dp"
                app:layout_constraintBottom_toTopOf="@id/item_event_tickets_description"
                app:layout_constraintTop_toBottomOf="@id/item_event_tickets_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="14dp"
                android:maxLines="1"
                android:id="@+id/item_event_tickets_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_margin="10dp"
                app:layout_constraintBottom_toTopOf="@id/item_event_tickets_remain_ticket"
                app:layout_constraintTop_toBottomOf="@id/item_event_tickets_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="12dp"
                android:maxLines="2"
                android:id="@+id/item_event_tickets_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_margin="10dp"
                app:layout_constraintBottom_toTopOf="@id/item_event_tickets_limit"
                app:layout_constraintTop_toBottomOf="@id/item_event_tickets_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="12dp"
                android:maxLines="1"
                android:id="@+id/item_event_tickets_remain_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_event_tickets_remain_ticket"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="12dp"
                android:maxLines="1"
                android:id="@+id/item_event_tickets_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>