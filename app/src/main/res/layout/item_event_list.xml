<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="170dp"
        android:layout_height="220dp"
        android:id="@+id/cardView">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/item_event_image"
                android:layout_width="170dp"
                android:layout_height="80dp"/>

        <TextView
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_event_image"
                android:layout_margin="10dp"
                android:text="date"
                android:textSize="10dp"
                android:id="@+id/item_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_event_date"
                app:layout_constraintBottom_toTopOf="@id/item_event_host"
                android:layout_margin="10dp"
                android:text="name"
                android:lines="2"
                android:maxLines="2"
                android:textSize="11dp"
                android:id="@+id/item_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:maxLines="1"
                android:layout_margin="10dp"
                android:text="host"
                android:textSize="10dp"
                app:layout_constraintBottom_toTopOf="@id/item_event_line"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/item_event_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_margin="10dp"
                android:background="@color/colorGray"
                app:layout_constraintTop_toBottomOf="@id/item_event_host"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/item_event_line"
                android:layout_width="0dp"
                android:layout_height="1dp"/>

        <TextView
                android:maxLines="1"
                android:layout_margin="10dp"
                android:text="price"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_event_line"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/item_event_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>